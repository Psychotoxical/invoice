{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Rechnung",
  "version": "1.0.13",
  "identifier": "de.stelle.rechnung",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Rechnung",
        "width": 1200,
        "height": 800,
        "minWidth": 900,
        "minHeight": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "publisher": "Open Source",
    "shortDescription": "Moderne Rechnungsverwaltung",
    "longDescription": "Eine moderne, plattform√ºbergreifende Desktop-Anwendung zur Verwaltung von Rechnungen, Kunden und Artikeln - komplett offline und datenschutzfreundlich.",
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}